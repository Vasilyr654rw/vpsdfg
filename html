    <script>
        // === –í–ê–ñ–ù–û: –ò–∑–º–µ–Ω–∏ —ç—Ç—É —Å—Ç—Ä–æ–∫—É –Ω–∞ —Å–≤–æ–π backend URL ===
        const BACKEND_URL = "http://82.24.110.81:9292";
        // ====================================================
        
        let currentConfig = '';
        
        // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è UUID
        function generateUUID() {
            return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
                const r = Math.random() * 16 | 0;
                const v = c === 'x' ? r : (r & 0x3 | 0x8);
                return v.toString(16);
            });
        }
        
        // –ü–æ–∫–∞–∑–∞—Ç—å —Å—Ç–∞—Ç—É—Å
        function showStatus(message, type = 'info') {
            const statusEl = document.getElementById('status');
            statusEl.textContent = message;
            statusEl.className = `status ${type}`;
            setTimeout(() => {
                statusEl.className = 'status';
            }, 5000);
        }
        
        // –û–±–Ω–æ–≤–∏—Ç—å —Å—Ç–∞—Ç—É—Å backend
        function updateBackendStatus(online) {
            const statusEl = document.getElementById('backendStatus');
            if (online) {
                statusEl.textContent = '‚úÖ Backend API –¥–æ—Å—Ç—É–ø–µ–Ω (–ø–æ—Ä—Ç 9292)';
                statusEl.className = 'backend-status backend-online';
            } else {
                statusEl.textContent = '‚ö†Ô∏è Backend –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω - –≥–µ–Ω–µ—Ä–∞—Ü–∏—è –ª–æ–∫–∞–ª—å–Ω–æ';
                statusEl.className = 'backend-status backend-offline';
            }
        }
        
        // –ü—Ä–æ–≤–µ—Ä–∫–∞ backend
        async function checkBackend() {
            try {
                const response = await fetch(`${BACKEND_URL}/`, {
                    method: 'GET',
                    mode: 'cors',
                    cache: 'no-cache'
                });
                
                if (response.ok) {
                    const data = await response.json();
                    updateBackendStatus(true);
                    return true;
                } else {
                    updateBackendStatus(false);
                    return false;
                }
            } catch (error) {
                console.log('Backend –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω:', error);
                updateBackendStatus(false);
                return false;
            }
        }
        
        // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏
        async function generateConfig() {
            const btn = document.getElementById('generateBtn');
            const resultEl = document.getElementById('result');
            const username = document.getElementById('username').value.trim() || 'vpn_user';
            const days = parseInt(document.getElementById('days').value) || 7;
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É
            btn.innerHTML = 'üîÑ –ì–µ–Ω–µ—Ä–∏—Ä—É—é...';
            btn.disabled = true;
            
            try {
                let configUrl = '';
                let clientId = generateUUID();
                
                // –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç—å backend
                const backendAvailable = await checkBackend();
                
                if (backendAvailable) {
                    // –ò—Å–ø–æ–ª—å–∑—É–µ–º backend API
                    showStatus('üì° –û—Ç–ø—Ä–∞–≤–ª—è—é –∑–∞–ø—Ä–æ—Å –Ω–∞ —Å–µ—Ä–≤–µ—Ä...', 'info');
                    
                    const response = await fetch(`${BACKEND_URL}/create-client`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            username: username,
                            days: days,
                            client_id: clientId
                        })
                    });
                    
                    if (response.ok) {
                        const data = await response.json();
                        if (data.success) {
                            configUrl = data.data.vless_url;
                            clientId = data.data.client_id;
                            showStatus(`‚úÖ –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∞ –∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞ –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ! –°—Ä–æ–∫: ${days} –¥–Ω–µ–π`, 'success');
                        } else {
                            throw new Error(data.error || '–û—à–∏–±–∫–∞ backend');
                        }
                    } else {
                        throw new Error(`HTTP –æ—à–∏–±–∫–∞: ${response.status}`);
                    }
                } else {
                    // –õ–æ–∫–∞–ª—å–Ω–∞—è –≥–µ–Ω–µ—Ä–∞—Ü–∏—è
                    configUrl = `vless://${clientId}@82.24.110.81:50603?security=none#${encodeURIComponent(username + ' - ' + days + ' –¥–Ω–µ–π')}`;
                    showStatus(`‚úÖ –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∞ –ª–æ–∫–∞–ª—å–Ω–æ! –°—Ä–æ–∫: ${days} –¥–Ω–µ–π`, 'success');
                }
                
                // –°–æ—Ö—Ä–∞–Ω—è–µ–º –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—é
                currentConfig = configUrl;
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç
                document.getElementById('configText').textContent = configUrl;
                resultEl.classList.add('show');
                
                // –ü—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –∫ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—É
                resultEl.scrollIntoView({ behavior: 'smooth', block: 'start' });
                
                // –°–∫—Ä—ã–≤–∞–µ–º QR –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –µ—Å–ª–∏ –æ–Ω –æ—Ç–∫—Ä—ã—Ç
                document.getElementById('qrContainer').classList.remove('show');
                
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏:', error);
                
                // Fallback - –ª–æ–∫–∞–ª—å–Ω–∞—è –≥–µ–Ω–µ—Ä–∞—Ü–∏—è –ø—Ä–∏ –æ—à–∏–±–∫–µ
                const clientId = generateUUID();
                const username = document.getElementById('username').value.trim() || 'vpn_user';
                const days = parseInt(document.getElementById('days').value) || 7;
                
                currentConfig = `vless://${clientId}@82.24.110.81:50603?security=none#${encodeURIComponent(username + ' - ' + days + ' –¥–Ω–µ–π')}`;
                
                document.getElementById('configText').textContent = currentConfig;
                resultEl.classList.add('show');
                resultEl.scrollIntoView({ behavior: 'smooth', block: 'start' });
                
                showStatus(`‚ö†Ô∏è ${error.message}. –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∞ –ª–æ–∫–∞–ª—å–Ω–æ.`, 'info');
            } finally {
                // –í–æ—Å—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∫–Ω–æ–ø–∫—É
                btn.innerHTML = 'üöÄ –°–ì–ï–ù–ï–†–ò–†–û–í–ê–¢–¨ VPN –ö–û–ù–§–ò–ì';
                btn.disabled = false;
            }
        }
        
        // –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏
        function copyConfig() {
            if (!currentConfig) {
                showStatus('‚ùå –°–Ω–∞—á–∞–ª–∞ —Å–≥–µ–Ω–µ—Ä–∏—Ä—É–π—Ç–µ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—é', 'error');
                return;
            }
            
            navigator.clipboard.writeText(currentConfig).then(() => {
                showStatus('‚úÖ –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞ –≤ –±—É—Ñ–µ—Ä!', 'success');
            }).catch(err => {
                // Fallback –¥–ª—è —Å—Ç–∞—Ä—ã—Ö –±—Ä–∞—É–∑–µ—Ä–æ–≤
                const textarea = document.createElement('textarea');
                textarea.value = currentConfig;
                document.body.appendChild(textarea);
                textarea.select();
                document.execCommand('copy');
                document.body.removeChild(textarea);
                showStatus('‚úÖ –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞!', 'success');
            });
        }
        
        // –ü–æ–∫–∞–∑–∞—Ç—å QR –∫–æ–¥
        function showQRCode() {
            if (!currentConfig) {
                showStatus('‚ùå –°–Ω–∞—á–∞–ª–∞ —Å–≥–µ–Ω–µ—Ä–∏—Ä—É–π—Ç–µ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—é', 'error');
                return;
            }
            
            const qrContainer = document.getElementById('qrContainer');
            const qrcodeDiv = document.getElementById('qrcode');
            
            // –û—á–∏—â–∞–µ–º –ø—Ä–µ–¥—ã–¥—É—â–∏–π QR
            qrcodeDiv.innerHTML = '';
            
            // –°–æ–∑–¥–∞—ë–º –Ω–æ–≤—ã–π QR –∫–æ–¥
            new QRCode(qrcodeDiv, {
                text: currentConfig,
                width: 200,
                height: 200,
                colorDark: "#000000",
                colorLight: "#ffffff",
                correctLevel: QRCode.CorrectLevel.H
            });
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
            qrContainer.classList.add('show');
            qrContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
        
        // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è
        function testConnection() {
            showStatus('üîç –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –∫ —Å–µ—Ä–≤–µ—Ä—É...', 'info');
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –ø–∞–Ω–µ–ª—å X-UI
            const testUrl = `http://82.24.110.81:54321`;
            
            fetch(testUrl, { mode: 'no-cors', cache: 'no-cache' })
                .then(() => {
                    showStatus('‚úÖ –ü–∞–Ω–µ–ª—å X-UI –¥–æ—Å—Ç—É–ø–Ω–∞', 'success');
                })
                .catch(() => {
                    showStatus('‚ö†Ô∏è –ü–∞–Ω–µ–ª—å –Ω–µ–¥–æ—Å—Ç—É–ø–Ω–∞, –Ω–æ VPN –º–æ–∂–µ—Ç —Ä–∞–±–æ—Ç–∞—Ç—å', 'info');
                });
        }
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        document.addEventListener('DOMContentLoaded', function() {
            console.log('VPN Configurator –∑–∞–≥—Ä—É–∂–µ–Ω');
            console.log('Backend URL:', BACKEND_URL);
            
            // –ê–≤—Ç–æ–∑–∞–ø–æ–ª–Ω–µ–Ω–∏–µ –∏–º–µ–Ω–∏ –∏–∑ URL –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤
            const urlParams = new URLSearchParams(window.location.search);
            const tgUser = urlParams.get('tg_user');
            if (tgUser) {
                document.getElementById('username').value = tgUser;
            }
            
            // –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç–∏ backend
            checkBackend();
        });
    </script>
